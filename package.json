{
  "name": "helpshare",
  "version": "1.0.0",
  "description": "Database-backed API supporting cooperative help management",
  "main": "src/server.js",
  "scripts": {
    "db_drop": "dropdb --if-exists helpshare",
    "db_reset": "dropdb --if-exists helpshare && createdb helpshare",
    "schema_reset": "node db/schema",
    "lint": "eslint db/*.js && exit 0",
    "lint_fix": "eslint --fix db/*.js && exit 0",
    "start": "node src/server.js",
    "start_dev": "nodemon src/server.js",
    "test": "echo 'Error: no test specified' && exit 1"
  },
  "keywords": [],
  "author": "Jonathan Pool",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "pg-promise": "^6.2.1"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "babel-preset-es2015": ">=6.24.1",
    "babel-register": ">=6.24.1",
    "eslint": "^4.0.0"
  },
  "bugs": {
    "url": "https://github.com/jrpool/helpshare.git/issues"
  },
  "homepage": "https://github.com/jrpool/helpshare.git/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrpool/helpshare.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jquery": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 0,
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-array-constructor": [
        "error"
      ],
      "no-cond-assign": [
        "off"
      ],
      "no-control-regex": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-new-object": [
        "error"
      ],
      "no-var": [
        "off"
      ],
      "no-whitespace-before-property": [
        "error"
      ],
      "prefer-const": [
        "warn"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "space-unary-ops": [
        "error",
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/",
            "*"
          ]
        }
      ]
    }
  }
}
